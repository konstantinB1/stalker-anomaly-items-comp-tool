{
    "include": ["src/*.ts"],
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "target": "ESNext",
        "moduleResolution": "node",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "strictBuiltinIteratorReturn": false,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noErrorTruncation": true,
        "lib": ["ESNext", "DOM", "DOM.Iterable"]
    }
}
